extends layout

block content
  h1 Paste the Content In the Box
  p Welcome to Spam Checker
  form(action='/',method='POST')
    .form-group
      textarea#message.form-control(name='message',rows='3')
    button.btn.btn-primary(type='submit') Check
  if message
  .error.alert.alert-secondary.mt-3
    =message

